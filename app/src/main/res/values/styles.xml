<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ripple_button_primary</item>
    </style>

    <style name="Widget.AppCompat.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.TextFloatLabelAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorControlHighlight">@color/teal_200</item>
        <item name="counterOverflowTextAppearance">@style/TextAppearance.Design.Counter.Overflow
        </item>
        <item name="counterTextAppearance">@style/TextAppearance.Design.Counter</item>
        <item name="hintTextAppearance">@style/AppTheme.TextFloatLabelAppearance</item>
    </style>
</resources>